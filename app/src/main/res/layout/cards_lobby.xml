<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".LobbyActivity"
    tools:showIn="@layout/content_lobby">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/league_of_legends_1024x576"
            tools:srcCompat="@drawable/league_of_legends_1024x576" />

        <TextView
            android:id="@+id/nameBetCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/bet_name"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/nameGameCard"
            app:layout_constraintStart_toEndOf="@+id/imageCard"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameGameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/game_name"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/bettorsCard"
            app:layout_constraintStart_toEndOf="@+id/nameBetCard"
            app:layout_constraintTop_toBottomOf="@+id/nameBetCard" />

        <TextView
            android:id="@+id/bettorsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/amount_bettors"
            app:layout_constraintBottom_toTopOf="@+id/betCard"
            app:layout_constraintStart_toEndOf="@+id/nameBetCard"
            app:layout_constraintTop_toBottomOf="@+id/nameGameCard" />

        <TextView
            android:id="@+id/betCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/bet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameBetCard"
            app:layout_constraintTop_toBottomOf="@+id/bettorsCard" />

        <TextView
            android:id="@+id/amountBettorsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="3/50"
            app:layout_constraintBottom_toBottomOf="@+id/bettorsCard"
            app:layout_constraintStart_toEndOf="@+id/bettorsCard"
            app:layout_constraintTop_toTopOf="@+id/bettorsCard" />

        <TextView
            android:id="@+id/amountCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="$20000"
            app:layout_constraintBottom_toBottomOf="@+id/betCard"
            app:layout_constraintStart_toEndOf="@+id/betCard"
            app:layout_constraintTop_toTopOf="@+id/betCard" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>